<%- include ("includes/header", {
    "title": "All shared links"
 }) %>

 
 
 <div class="container" style="margin-top: 50px; margin-bottom: 50px;">
     <%- include ("includes/ResponseAlert", {
         "request": request
     }) %>
 
     <div class="row">
         <div class="col-md-12">
             <h1>All shared links</h1>
         </div>
     </div>
 
     <div class="row">
         <%
             links.forEach(function (link) {
 
                 const singleFile = link.file;
         %>

         
             <div class="col-md-4" style="margin-top: 30px;">
 
                 <div class="card">
                     <div class="card-body" style="font-size: 100px; text-align: center; height: 300px;">
                         <i class="fa fa-file-text-o"></i>
                      
 
                    <div>
                           
                            
                             <button type="button"
                         class="btn btn-success"
                         onclick="downloadFile(this);"
                         data-id="<%= singleFile._id %>">Download</button>
                    </div>
                        
                     </div>
 
                     <div class="card-footer">
                         <div class="row">
                             <div class="col-md-8">
                                 <h3>
                                     <%= singleFile.name %>
                                 </h3>
                             </div>
                         </div>
                         
                     </div>
                 </div>
             </div>
         <% }) %>
     </div>
     <%- include ("includes/footer") %>
 </div>